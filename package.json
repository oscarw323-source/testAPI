{
  "name": "back-and-samurai",
  "version": "1.0.0",
  "description": "Простой Express сервер на TypeScript",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:nodemon": "nodemon --exec \"ts-node index.ts\"",
    "start": "node dist/index.js",
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "watch": "tsc -w",
    "devs": "nodemon ./dist/index.js",
    "heroku-postbuild": "yarn build",
    "test": "jest --detectOpenHandles --no-cache"
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "express": "^5.2.1",
    "jest": "^30.2.0",
    "jquery": "^3.7.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}
